@model IEnumerable<TheCoffeeSpace_WebApplication_MVC_.Models.TbSanPham>

@{
    ViewData["Title"] = "TimSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Tìm Sản Phẩm</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sản Phẩm
            </th>
            <th>
                Giá Bán
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Ghi Chú
            </th>
            <th>
                Mã Nhóm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                <img src="@Url.Content("../LayoutAdmin/images/"+item.HinhAnh)" alt=" Chua cap nhat" style="height:100px;width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.MaNhomSp)
            </td>
        </tr>
}
    </tbody>
</table>

